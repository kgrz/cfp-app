= form_for [:admin, person] do |f|
  .row
    .col-xs-12.col-sm-6
      .row
        .col-xs-12
          %h3
            %strong Basic Details
      .row
        .col-xs-12
          .form-group.form-group-lg
            = f.label :name, "Name", class: 'control-label'
            = f.text_field :name, class: 'form-control', placeholder: 'Name'
          .form-group.form-group-lg
            = f.label :email, "Email", class: 'control-label'
            = f.email_field :email, class: 'form-control', placeholder: 'Email address'
          .form-group.form-group-lg
            = f.label :bio, "Bio", class: 'control-label'
            = f.text_area :bio, class: 'form-control', placeholder: 'Bio', rows: 8

    .col-sm-6.col-xs-12
      .row
        .col-xs-12
          %h3
            %strong Demographics
      .row
        .col-xs-12
          = render :partial => 'shared/demographics', :locals => {:f => f}

  .row
    .col-md-12
      .form-submit
        %button.pull-right.btn.btn-lg.btn-success{:type => "submit"} Save
